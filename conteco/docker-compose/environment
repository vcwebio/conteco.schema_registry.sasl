#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="schema_registry.base"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_schema_registry"
export CONTECO_DC_GLOBAL_BOOTSTACKS="conteco_dc_schema_registry"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST="${DOLLAR}{CONTECO_STACKPREFIX}_schema_registry_secrets_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_SCHEMA_REGISTRY_ENVIRONMENT,$CONTECO_DC_SCHEMA_REGISTRY_COMMAND,$CONTECO_DC_SCHEMA_REGISTRY_VOLUMES,$CONTECO_DC_SCHEMA_REGISTRY_NETWORKS,$CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_MODE,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_SCHEMA_REGISTRY_ENVIRONMENT="\
'SCHEMA_REGISTRY_HOST_NAME=schema_registry', \
'SCHEMA_REGISTRY_LISTENERS=http://0.0.0.0:8085', \
'SCHEMA_REGISTRY_KAFKASTORE_SSL_ENDPOINT_IDENTIFIED_ALGORITHM=https', \
'SCHEMA_REGISTRY_KAFKASTORE_SECURITY_PROTOCOL=SASL_SSL', \
'SCHEMA_REGISTRY_KAFKASTORE_BOOTSTRAP_SERVERS=${DOLLAR}{CONTECO_DC_SCHEMA_REGISTRY_ENVIRONMENT_CLOUD_BOOTSTRAP_SERVERS}',\
'SCHEMA_REGISTRY_KAFKASTORE_SASL_JAAS_CONFIG=org.apache.kafka.common.security.plain.PlainLoginModule required username=\"${DOLLAR}{CONTECO_DC_SCHEMA_REGISTRY_ENVIRONMENT_SASL_JAAS_CONFIG_CLUSTER_API_KEY}\" password=\"${DOLLAR}{CONTECO_DC_SCHEMA_REGISTRY_ENVIRONMENT_SASL_JAAS_CONFIG_CLUSTER_API_SECRET}\";',\
'SCHEMA_REGISTRY_KAFKASTORE_SASL_MECHANISM=PLAIN'"
export CONTECO_DC_SCHEMA_REGISTRY_COMMAND=
export CONTECO_DC_SCHEMA_REGISTRY_VOLUMES="'${DOLLAR}{CONTECO_STACKPREFIX}_schema_registry_secrets_volume:/etc/schema-registry/secrets'"
export CONTECO_DC_SCHEMA_REGISTRY_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay"
export CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_STACKPREFIX}_schema_registry_secrets_volume: { external: true }"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS schema_registry.base
export CONTECO_DC_SCHEMA_REGISTRY_PORTS="8081:8081"
export CONTECO_DC_SCHEMA_REGISTRY_LABELS=
export CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_LABELS=
export CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_REPLICAS=1
export CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_PLACEMENT_CONSTRAINTS=
export CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export CONTECO_DC_SCHEMA_REGISTRY_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS schema_registry.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS

# EXTERNAL ENVIRONMENT VARIABLES
# ==============================
# CONTECO_DC_SCHEMA_REGISTRY_ENVIRONMENT_CLOUD_BOOTSTRAP_SERVERS
# CONTECO_DC_SCHEMA_REGISTRY_ENVIRONMENT_SASL_JAAS_CONFIG_CLUSTER_API_KEY
# CONTECO_DC_SCHEMA_REGISTRY_ENVIRONMENT_SASL_JAAS_CONFIG_CLUSTER_API_SECRET
